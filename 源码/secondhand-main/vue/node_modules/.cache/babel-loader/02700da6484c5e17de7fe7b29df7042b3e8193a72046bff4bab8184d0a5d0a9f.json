{"ast":null,"code":"export default {\n  data() {\n    return {\n      categoryList: [],\n      goodsList: [],\n      // 所有的数据\n      pageNum: 1,\n      // 当前的页码\n      pageSize: 12,\n      // 每页显示的个数\n      total: 0,\n      category: '全部',\n      sort: '最新',\n      name: ''\n    };\n  },\n  mounted() {\n    this.loadCategory();\n    this.loadGoods(1);\n  },\n  methods: {\n    loadCategory() {\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n      });\n    },\n    loadGoods(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/goods/selectFrontPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          category: this.category === '全部' ? null : this.category,\n          sort: this.sort\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.goodsList = res.data?.list;\n          this.total = res.data?.total;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.loadGoods(pageNum);\n    }\n  }\n};","map":{"version":3,"names":["data","categoryList","goodsList","pageNum","pageSize","total","category","sort","name","mounted","loadCategory","loadGoods","methods","$request","get","then","res","params","code","list","$message","error","msg","handleCurrentChange"],"sources":["src/views/front/Home.vue"],"sourcesContent":["<template>\n  <div style=\"min-height: 100vh\">\n    <!-- 背景区域 -->\n    <div class=\"bg\">\n      <div style=\"width: 600px\">\n        <div class=\"header-text\">\n          好看、好用、好玩，都在这里\n        </div>\n        <div style=\"display: flex\">\n          <!-- 搜索框 -->\n          <el-input\n            v-model=\"name\"\n            size=\"medium\"\n            prefix-icon=\"el-icon-search\"\n            placeholder=\"请输入商品名称关键字搜索\"\n            class=\"search-input\"\n          ></el-input>\n          <el-button\n            @click=\"$router.push({ path: '/front/search', query: { name: name } })\"\n            size=\"medium\"\n            type=\"primary\"\n            class=\"search-button\"\n          >\n            <i class=\"el-icon-search\"></i>\n          </el-button>\n        </div>\n      </div>\n    </div>\n\n    <!-- 商品展示区域 -->\n    <div class=\"goods-container\">\n      <el-button\n        @click=\"$router.push('/front/addGoods')\"\n        class=\"action-button\"\n        size=\"medium\"\n        type=\"primary\"\n        plain\n      >\n        发布商品\n      </el-button>\n      <el-button\n        @click=\"$router.push('/front/userHelp')\"\n        class=\"action-button\"\n        size=\"medium\"\n        type=\"primary\"\n        plain\n      >\n        发布求助\n      </el-button>\n\n      <div class=\"filter-container\">\n        <!-- 分类选择 -->\n        <el-select v-model=\"category\" size=\"medium\" class=\"filter-select\" @change=\"loadGoods(1)\">\n          <el-option value=\"全部\">全部</el-option>\n          <el-option v-for=\"item in categoryList\" :key=\"item.id\" :value=\"item.name\">\n            {{ item.name }}\n          </el-option>\n        </el-select>\n\n        <!-- 排序选择 -->\n        <el-select v-model=\"sort\" size=\"medium\" class=\"filter-select\" @change=\"loadGoods(1)\">\n          <el-option value=\"最新\">最新</el-option>\n          <el-option value=\"最热\">最热</el-option>\n        </el-select>\n      </div>\n\n      <div>\n        <el-row :gutter=\"15\">\n          <el-col :span=\"6\" v-for=\"item in goodsList\" :key=\"item.id\">\n            <div\n              class=\"goods-item\"\n              @click=\"$router.push('/front/goodsDetail?id=' + item.id)\"\n            >\n              <img :src=\"item.img\" alt=\"\" class=\"goods-image\" />\n              <div class=\"goods-name\">{{ item.name }}</div>\n              <div class=\"goods-info\">\n                <strong class=\"goods-price\">￥{{ item.price }}</strong>\n                <span class=\"goods-read-count\">{{ item.readCount }}人浏览</span>\n                <span class=\"goods-likes-count\">{{ item.likesCount }}人点赞</span>\n              </div>\n            </div>\n          </el-col>\n        </el-row>\n\n        <!-- 分页 -->\n        <div class=\"pagination-container\">\n          <el-pagination\n            background\n            @current-change=\"handleCurrentChange\"\n            :current-page=\"pageNum\"\n            :page-sizes=\"[5, 10, 20]\"\n            :page-size=\"pageSize\"\n            layout=\"total, prev, pager, next\"\n            :total=\"total\"\n          ></el-pagination>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  data() {\n    return {\n      categoryList: [],\n      goodsList: [],  // 所有的数据\n      pageNum: 1,   // 当前的页码\n      pageSize: 12,  // 每页显示的个数\n      total: 0,\n      category: '全部',\n      sort: '最新',\n      name: ''\n    };\n  },\n  mounted() {\n    this.loadCategory();\n    this.loadGoods(1);\n  },\n  methods: {\n    loadCategory() {\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n      });\n    },\n    loadGoods(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request\n        .get('/goods/selectFrontPage', {\n          params: {\n            pageNum: this.pageNum,\n            pageSize: this.pageSize,\n            category: this.category === '全部' ? null : this.category,\n            sort: this.sort\n          }\n        })\n        .then(res => {\n          if (res.code === '200') {\n            this.goodsList = res.data?.list;\n            this.total = res.data?.total;\n          } else {\n            this.$message.error(res.msg);\n          }\n        });\n    },\n    handleCurrentChange(pageNum) {\n      this.loadGoods(pageNum);\n    }\n  }\n};\n</script>\n\n<style scoped>\n/* 背景区域 */\n.bg {\n  height: 400px;\n  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),\n    url('@/assets/imgs/home.png');\n  background-size: 100%;\n  background-position-y: center;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  transition: background 1s ease-in-out;\n}\n\n/* 标题文本 */\n.header-text {\n  text-align: center;\n  color: #eee;\n  font-size: 30px;\n  margin-bottom: 20px;\n}\n\n/* 搜索框 */\n.search-input {\n  border-radius: 20px;\n  padding-left: 30px;\n  background-color: #f1f5f8;\n}\n\n.search-button {\n  background-color: #409eff;\n  color: white;\n  border-radius: 20px;\n  font-size: 16px;\n  transition: background-color 0.3s ease;\n}\n\n.search-button:hover {\n  background-color: #357acc;\n}\n\n/* 商品展示区域 */\n.goods-container {\n  width: 70%;\n  background-color: #fff;\n  margin: 10px auto;\n  padding: 20px;\n  border-radius: 5px;\n  position: relative;\n}\n\n.action-button {\n  position: absolute;\n  top: 20px;\n  right: 20px;\n  border-radius: 25px;\n  padding: 12px 25px;\n  font-size: 16px;\n  background-color: #ec3d3d;\n  color: white;\n}\n\n.action-button:hover {\n  background-color: #c63434;\n}\n\n/* 筛选部分 */\n.filter-container {\n  margin-bottom: 20px;\n}\n\n.filter-select {\n  width: 200px;\n  margin-right: 10px;\n}\n\n/* 商品卡片样式 */\n.goods-item {\n  cursor: pointer;\n  border-radius: 8px;\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);\n  transition: all 0.3s ease;\n}\n\n.goods-item:hover {\n  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);\n}\n\n.goods-item img {\n  border-radius: 5px;\n  transition: transform 0.3s ease;\n}\n\n.goods-item:hover img {\n  transform: scale(1.05);\n}\n\n.goods-item .goods-name {\n  transition: color 0.3s ease;\n}\n\n.goods-item:hover .goods-name {\n  color: #ec3d3d;\n}\n\n.goods-info {\n  display: flex;\n  align-items: baseline;\n  margin-top: 10px;\n}\n\n.goods-price {\n  color: red;\n  font-size: 24px;\n}\n\n.goods-read-count,\n.goods-likes-count {\n  color: #666;\n  margin-left: 20px;\n}\n\n/* 分页样式 */\n.pagination-container {\n  margin: 15px auto;\n  text-align: center;\n}\n\n.el-pagination {\n  display: flex;\n  justify-content: center;\n  background-color: #f8f8f8;\n  border-radius: 10px;\n}\n\n.el-pagination button {\n  border-radius: 10px;\n  padding: 8px 16px;\n  background-color: #fff;\n  color: #409eff;\n}\n\n.el-pagination button:hover {\n  background-color: #ecf5ff;\n}\n\n/* 响应式设计 */\n@media (max-width: 768px) {\n  .bg {\n    height: 300px;\n  }\n\n  .goods-item {\n    font-size: 14px;\n  }\n\n  .el-input {\n    width: 100%;\n  }\n\n  .el-button {\n    width: 100%;\n    margin-top: 10px;\n  }\n}\n</style>\n"],"mappings":"AAsGA;EACAA,KAAA;IACA;MACAC,YAAA;MACAC,SAAA;MAAA;MACAC,OAAA;MAAA;MACAC,QAAA;MAAA;MACAC,KAAA;MACAC,QAAA;MACAC,IAAA;MACAC,IAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,YAAA;IACA,KAAAC,SAAA;EACA;EACAC,OAAA;IACAF,aAAA;MACA,KAAAG,QAAA,CAAAC,GAAA,wBAAAC,IAAA,CAAAC,GAAA;QACA,KAAAf,YAAA,GAAAe,GAAA,CAAAhB,IAAA;MACA;IACA;IACAW,UAAAR,OAAA;MACA,IAAAA,OAAA,OAAAA,OAAA,GAAAA,OAAA;MACA,KAAAU,QAAA,CACAC,GAAA;QACAG,MAAA;UACAd,OAAA,OAAAA,OAAA;UACAC,QAAA,OAAAA,QAAA;UACAE,QAAA,OAAAA,QAAA,wBAAAA,QAAA;UACAC,IAAA,OAAAA;QACA;MACA,GACAQ,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAE,IAAA;UACA,KAAAhB,SAAA,GAAAc,GAAA,CAAAhB,IAAA,EAAAmB,IAAA;UACA,KAAAd,KAAA,GAAAW,GAAA,CAAAhB,IAAA,EAAAK,KAAA;QACA;UACA,KAAAe,QAAA,CAAAC,KAAA,CAAAL,GAAA,CAAAM,GAAA;QACA;MACA;IACA;IACAC,oBAAApB,OAAA;MACA,KAAAQ,SAAA,CAAAR,OAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}