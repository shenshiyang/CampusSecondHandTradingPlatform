{"ast":null,"code":"export default {\n  name: \"CommentComponent\",\n  props: {\n    fid: null,\n    module: null\n  },\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      commentCount: 0,\n      content: '',\n      commentList: [],\n      pageNum: 1,\n      pageSize: 5,\n      total: 0\n    };\n  },\n  created() {\n    this.loadComment();\n  },\n  methods: {\n    handleShowReply(comment) {\n      this.$set(comment, 'showReply', !comment.showReply);\n    },\n    delComment(commentId) {\n      // 单个删除\n      this.$confirm('您确定删除吗？', '确认删除', {\n        type: \"warning\"\n      }).then(response => {\n        this.$request.delete('/comment/delete/' + commentId).then(res => {\n          if (res.code === '200') {\n            // 表示操作成功\n            this.$message.success('操作成功');\n            this.loadComment();\n          } else {\n            this.$message.error(res.msg); // 弹出错误的信息\n          }\n        });\n      }).catch(() => {});\n    },\n    loadComment() {\n      this.$request.get('/comment/selectTree/' + this.fid + '/' + this.module, {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize\n        }\n      }).then(res => {\n        this.commentList = res.data?.list || [];\n        this.total = res.data?.total || 0;\n      });\n      this.$request.get('/comment/selectCount/' + this.fid + '/' + this.module).then(res => {\n        this.commentCount = res.data || 0;\n      });\n    },\n    addComment(comment) {\n      //  comment 有值表示这是回复\n      let data = {\n        fid: this.fid,\n        userId: this.user.id,\n        module: this.module,\n        content: this.content\n      };\n      if (comment) {\n        data.content = comment.replyContent;\n        data.pid = comment.id;\n      }\n      if (!data.content) {\n        this.$message.warning('请输入内容!');\n        return;\n      }\n      this.$request.post('/comment/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n          this.content = '';\n          this.loadComment();\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.pageNum = pageNum;\n      this.loadComment();\n    }\n  }\n};","map":{"version":3,"names":["name","props","fid","module","data","user","JSON","parse","localStorage","getItem","commentCount","content","commentList","pageNum","pageSize","total","created","loadComment","methods","handleShowReply","comment","$set","showReply","delComment","commentId","$confirm","type","then","response","$request","delete","res","code","$message","success","error","msg","catch","get","params","list","addComment","userId","id","replyContent","pid","warning","post","handleCurrentChange"],"sources":["src/components/Comment.vue"],"sourcesContent":["<template>\n  <div>\n    <div style=\"margin-bottom: 20px; font-size: 22px; font-weight: bold\">评论 {{ commentCount }}</div>\n    <div style=\"margin-bottom: 20px\">\n      <el-input type=\"textarea\" placeholder=\"请输入评论\" v-model=\"content\"></el-input>\n      <div style=\"text-align: right; margin-top: 5px\"><el-button type=\"primary\" @click=\"addComment(null)\">评论</el-button></div>\n    </div>\n\n    <div>\n      <div v-for=\"item in commentList\" :key=\"item.id\" style=\"margin-bottom: 20px\">\n        <!-- 一级评论-->\n        <div style=\"display: flex; margin-bottom: 20px\">\n          <img :src=\"item.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\n          <div style=\"padding-left: 15px; flex: 1\">\n            <div style=\"margin-bottom: 10px; color: #666\">{{ item.userName }}</div>\n            <div style=\"margin-bottom: 5px\">{{ item.content }}</div>\n            <div style=\"color: #666; font-size: 13px; margin-bottom: 5px\">\n              <span>{{ item.time }}</span>\n              <span @click=\"handleShowReply(item)\" style=\"margin: 0 20px; cursor: pointer\"\n                    :class=\"{'comment-active' : item.showReply}\"><i class=\"el-icon-s-comment\"></i>回复</span>\n              <span @click=\"delComment(item.id)\" v-if=\"item.userId === user.id\" style=\"cursor: pointer\"><i class=\"el-icon-delete\"></i>删除</span>\n            </div>\n            <div v-if=\"item.showReply\">\n              <el-input type=\"textarea\" placeholder=\"请输入回复\" v-model=\"item.replyContent\"></el-input>\n              <div style=\"text-align: right; margin-top: 5px\"><el-button type=\"primary\" @click=\"addComment(item)\">回复</el-button></div>\n            </div>\n          </div>\n        </div>\n        <!-- 二级评论-->\n        <div v-if=\"item.children\" style=\"padding-left: 65px\">\n          <div v-for=\"sub in item.children\" style=\"display: flex; margin-bottom: 20px\">\n            <img :src=\"sub.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\n            <div style=\"padding-left: 15px; flex: 1\">\n              <div style=\"margin-bottom: 10px; color: #666\">{{ sub.userName }} <span v-if=\"sub.parentUserName !== item.userName\">回复：{{ sub.parentUserName }}</span></div>\n              <div style=\"margin-bottom: 5px\">{{ sub.content }}</div>\n              <div style=\"color: #666; font-size: 13px; margin-bottom: 5px\">\n                <span>{{ sub.time }}</span>\n                <span @click=\"handleShowReply(sub)\" style=\"margin: 0 20px; cursor: pointer\"\n                      :class=\"{'comment-active' : sub.showReply}\"><i class=\"el-icon-s-comment\"></i>回复</span>\n                <span @click=\"delComment(sub.id)\" v-if=\"sub.userId === user.id\" style=\"cursor: pointer\"><i class=\"el-icon-delete\"></i>删除</span>\n              </div>\n              <div v-if=\"sub.showReply\">\n                <el-input type=\"textarea\" placeholder=\"请输入回复\" v-model=\"sub.replyContent\"></el-input>\n                <div style=\"text-align: right; margin-top: 5px\"><el-button type=\"primary\" @click=\"addComment(sub)\">回复</el-button></div>\n              </div>\n            </div>\n          </div>\n        </div>\n      </div>\n\n      <div style=\"margin-top: 10px\" v-if=\"total > 0\">\n        <el-pagination\n            small\n            background\n            @current-change=\"handleCurrentChange\"\n            :current-page=\"pageNum\"\n            :page-sizes=\"[5, 10, 20]\"\n            :page-size=\"pageSize\"\n            layout=\"total, prev, pager, next\"\n            :total=\"total\">\n        </el-pagination>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: \"CommentComponent\",\n  props: {\n    fid: null,\n    module: null\n  },\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      commentCount: 0,\n      content: '',\n      commentList: [],\n      pageNum: 1,\n      pageSize: 5,\n      total: 0\n    }\n  },\n  created() {\n    this.loadComment()\n  },\n  methods: {\n    handleShowReply(comment) {\n      this.$set(comment, 'showReply', !comment.showReply)\n    },\n    delComment(commentId) {   // 单个删除\n      this.$confirm('您确定删除吗？', '确认删除', {type: \"warning\"}).then(response => {\n        this.$request.delete('/comment/delete/' + commentId).then(res => {\n          if (res.code === '200') {   // 表示操作成功\n            this.$message.success('操作成功')\n            this.loadComment()\n          } else {\n            this.$message.error(res.msg)  // 弹出错误的信息\n          }\n        })\n      }).catch(() => {\n      })\n    },\n    loadComment() {\n      this.$request.get('/comment/selectTree/' + this.fid + '/' + this.module, {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n        }\n      }).then(res => {\n        this.commentList = res.data?.list || []\n        this.total = res.data?.total || 0\n      })\n\n      this.$request.get('/comment/selectCount/' + this.fid + '/' + this.module).then(res => {\n        this.commentCount = res.data || 0\n      })\n    },\n    addComment(comment) {  //  comment 有值表示这是回复\n      let data = { fid: this.fid, userId: this.user.id, module: this.module, content: this.content }\n      if (comment) {\n        data.content = comment.replyContent\n        data.pid = comment.id\n      }\n      if (!data.content) {\n        this.$message.warning('请输入内容!')\n        return\n      }\n      this.$request.post('/comment/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功')\n          this.content = ''\n          this.loadComment()\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    handleCurrentChange(pageNum) {\n      this.pageNum = pageNum\n      this.loadComment()\n    },\n  }\n}\n</script>\n\n<style scoped>\n\n</style>"],"mappings":"AAmEA;EACAA,IAAA;EACAC,KAAA;IACAC,GAAA;IACAC,MAAA;EACA;EACAC,KAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAC,YAAA;MACAC,OAAA;MACAC,WAAA;MACAC,OAAA;MACAC,QAAA;MACAC,KAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,WAAA;EACA;EACAC,OAAA;IACAC,gBAAAC,OAAA;MACA,KAAAC,IAAA,CAAAD,OAAA,gBAAAA,OAAA,CAAAE,SAAA;IACA;IACAC,WAAAC,SAAA;MAAA;MACA,KAAAC,QAAA;QAAAC,IAAA;MAAA,GAAAC,IAAA,CAAAC,QAAA;QACA,KAAAC,QAAA,CAAAC,MAAA,sBAAAN,SAAA,EAAAG,IAAA,CAAAI,GAAA;UACA,IAAAA,GAAA,CAAAC,IAAA;YAAA;YACA,KAAAC,QAAA,CAAAC,OAAA;YACA,KAAAjB,WAAA;UACA;YACA,KAAAgB,QAAA,CAAAE,KAAA,CAAAJ,GAAA,CAAAK,GAAA;UACA;QACA;MACA,GAAAC,KAAA,QACA;IACA;IACApB,YAAA;MACA,KAAAY,QAAA,CAAAS,GAAA,+BAAApC,GAAA,cAAAC,MAAA;QACAoC,MAAA;UACA1B,OAAA,OAAAA,OAAA;UACAC,QAAA,OAAAA;QACA;MACA,GAAAa,IAAA,CAAAI,GAAA;QACA,KAAAnB,WAAA,GAAAmB,GAAA,CAAA3B,IAAA,EAAAoC,IAAA;QACA,KAAAzB,KAAA,GAAAgB,GAAA,CAAA3B,IAAA,EAAAW,KAAA;MACA;MAEA,KAAAc,QAAA,CAAAS,GAAA,gCAAApC,GAAA,cAAAC,MAAA,EAAAwB,IAAA,CAAAI,GAAA;QACA,KAAArB,YAAA,GAAAqB,GAAA,CAAA3B,IAAA;MACA;IACA;IACAqC,WAAArB,OAAA;MAAA;MACA,IAAAhB,IAAA;QAAAF,GAAA,OAAAA,GAAA;QAAAwC,MAAA,OAAArC,IAAA,CAAAsC,EAAA;QAAAxC,MAAA,OAAAA,MAAA;QAAAQ,OAAA,OAAAA;MAAA;MACA,IAAAS,OAAA;QACAhB,IAAA,CAAAO,OAAA,GAAAS,OAAA,CAA