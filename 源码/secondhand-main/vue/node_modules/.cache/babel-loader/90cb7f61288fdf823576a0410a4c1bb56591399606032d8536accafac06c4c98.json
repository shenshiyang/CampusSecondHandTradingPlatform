{"ast":null,"code":"export default {\n  data() {\n    return {\n      categoryList: [],\n      goodsList: [],\n      pageNum: 1,\n      pageSize: 12,\n      total: 0,\n      category: '全部',\n      sort: '最新',\n      name: ''\n    };\n  },\n  mounted() {\n    this.loadCategory();\n    this.loadGoods(1);\n  },\n  methods: {\n    loadCategory() {\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n      });\n    },\n    loadGoods(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/goods/selectFrontPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          category: this.category === '全部' ? null : this.category,\n          sort: this.sort\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.goodsList = res.data?.list;\n          this.total = res.data?.total;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.loadGoods(pageNum);\n    }\n  }\n};","map":{"version":3,"names":["data","categoryList","goodsList","pageNum","pageSize","total","category","sort","name","mounted","loadCategory","loadGoods","methods","$request","get","then","res","params","code","list","$message","error","msg","handleCurrentChange"],"sources":["src/views/front/Home.vue"],"sourcesContent":["<template>\n  <div class=\"home-container\">\n    <!-- 顶部搜索 -->\n    <div class=\"bg\">\n      <div class=\"search-card\">\n        <div class=\"slogan\">好看、好用、好玩，都在这里</div>\n        <div class=\"search-bar\">\n          <el-input\n            v-model=\"name\"\n            size=\"medium\"\n            prefix-icon=\"el-icon-search\"\n            placeholder=\"请输入商品名称关键字搜索\"\n            class=\"search-input\"\n          />\n          <el-button\n            type=\"primary\"\n            size=\"medium\"\n            @click=\"$router.push({ path: '/front/search', query: { name: name } })\"\n          >\n            <i class=\"el-icon-search\"></i>\n          </el-button>\n        </div>\n      </div>\n    </div>\n\n    <!-- 商品区域 -->\n    <div class=\"main-content\">\n      <!-- 发布按钮 -->\n      <div class=\"action-buttons\">\n        <el-button @click=\"$router.push('/front/addGoods')\" type=\"primary\" plain>发布商品</el-button>\n        <el-button @click=\"$router.push('/front/userHelp')\" type=\"primary\" plain>发布求购</el-button>\n      </div>\n\n      <!-- 筛选 -->\n      <div class=\"filter-bar\">\n        <el-select v-model=\"category\" size=\"medium\" @change=\"loadGoods(1)\" style=\"width: 200px\">\n          <el-option value=\"全部\" label=\"全部分类\" />\n          <el-option v-for=\"item in categoryList\" :key=\"item.id\" :label=\"item.name\" :value=\"item.name\" />\n        </el-select>\n        <el-select v-model=\"sort\" size=\"medium\" style=\"width: 200px; margin-left: 10px\" @change=\"loadGoods(1)\">\n          <el-option value=\"最新\" label=\"最新\" />\n          <el-option value=\"最热\" label=\"最热\" />\n        </el-select>\n      </div>\n\n      <!-- 商品列表 -->\n      <el-row :gutter=\"20\">\n        <el-col :span=\"6\" v-for=\"item in goodsList\" :key=\"item.id\">\n          <div class=\"goods-item\" @click=\"$router.push('/front/goodsDetail?id=' + item.id)\">\n            <img :src=\"item.img\" alt=\"商品图片\" class=\"goods-img\" />\n            <div class=\"goods-name line2\">{{ item.name }}</div>\n            <div class=\"goods-meta\">\n              <strong class=\"price\">￥{{ item.price }}</strong>\n              <span class=\"meta-info\">{{ item.readCount }} 浏览</span>\n              <span class=\"meta-info\">{{ item.likesCount }} 点赞</span>\n            </div>\n          </div>\n        </el-col>\n      </el-row>\n\n      <!-- 分页 -->\n      <div class=\"pagination-wrapper\" v-if=\"total > 0\">\n        <el-pagination\n          background\n          layout=\"total, prev, pager, next\"\n          :current-page=\"pageNum\"\n   