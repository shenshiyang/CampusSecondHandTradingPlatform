{"ast":null,"code":"export default {\n  data() {\n    return {\n      categoryList: [],\n      goodsList: [],\n      pageNum: 1,\n      pageSize: 12,\n      total: 0,\n      category: '全部',\n      sort: '最新',\n      name: ''\n    };\n  },\n  mounted() {\n    this.loadCategory();\n    this.loadGoods(1);\n  },\n  methods: {\n    loadCategory() {\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n      });\n    },\n    loadGoods(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/goods/selectFrontPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          category: this.category === '全部' ? null : this.category,\n          sort: this.sort\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.goodsList = res.data?.list;\n          this.total = res.data?.total;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.loadGoods(pageNum);\n    }\n  }\n};","map":{"version":3,"names":["data","categoryList","goodsList","pageNum","pageSize","total","category","sort","name","mounted","loadCategory","loadGoods","methods","$request","get","then","res","params","code","list","$message","error","msg","handleCurrentChange"],"sources":["src/views/front/Home.vue"],"sourcesContent":["<template>\n  <div class=\"min-h-screen\">\n    <!-- Background section -->\n    <div class=\"bg relative h-96 bg-cover bg-center flex items-center justify-center\" :style=\"{ backgroundImage: 'url(@/assets/imgs/home.png)' }\">\n      <div class=\"search-box w-3/4 md:w-1/2 text-center text-white\">\n        <div class=\"title text-4xl font-bold mb-6\">拾光于前湖，集物在人间</div>\n        <div class=\"search-input flex justify-center items-center space-x-3\">\n          <el-input v-model=\"name\" size=\"medium\" prefix-icon=\"el-icon-search\" placeholder=\"请输入商品名称关键字搜索\" class=\"w-full rounded-md shadow-md\"></el-input>\n          <el-button @click=\"$router.push({ path: '/front/search', query: { name: name } })\" size=\"medium\" type=\"primary\" class=\"rounded-md shadow-md hover:bg-blue-600 transition-colors\">\n            <i class=\"el-icon-search\"></i>\n          </el-button>\n        </div>\n      </div>\n    </div>\n  </div>\n    \n\n    <!-- Main content -->\n    <div class=\"content-box w-11/12 md:w-3/4 bg-white mx-auto my-6 p-6 rounded-lg shadow-lg relative\">\n      <!-- Action buttons -->\n      <div class=\"flex justify-end space-x-3 absolute top-6 right-6\">\n        <el-button @click=\"$router.push('/front/addGoods')\" type=\"primary\" plain class=\"rounded-md shadow-md hover:bg-blue-100 transition-colors\">发布商品</el-button>\n        <el-button @click=\"$router.push('/front/userHelp')\" type=\"primary\" plain class=\"rounded-md shadow-md hover:bg-blue-100 transition-colors\">发布求助</el-button>\n      </div>\n\n      <!-- Filters and categories -->\n      <div class=\"filters flex flex-wrap md:flex-nowrap space-x-4 mb-6\">\n        <el-select v-model=\"category\" size=\"medium\" @change=\"loadGoods(1)\" class=\"w-full md:w-1/2 rounded-md shadow-md\">\n          <el-option value=\"全部\"></el-option>\n          <el-option v-for=\"item in categoryList\" :key=\"item.id\" :value=\"item.name\">{{ item.name }}</el-option>\n        </el-select>\n\n        <el-select v-model=\"sort\" size=\"medium\" @change=\"loadGoods(1)\" class=\"w-full md:w-1/2 rounded-md shadow-md\">\n          <el-option value=\"最新\">最新</el-option>\n          <el-option value=\"最热\">最热</el-option>\n        </el-select>\n      </div>\n\n      <!-- Product listings -->\n      <div>\n        <el-row :gutter=\"15\">\n          <el-col :span=\"6\" v-for=\"item in goodsList\" :key=\"item.id\" class=\"mb-6\">\n            <div class=\"goods-item cursor-pointer rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow\" @click=\"$router.push('/front/goodsDetail?id=' + item.id)\">\n              <img :src=\"item.img\" alt=\"\" class=\"goods-image w-full h-64 object-cover\">\n              <div class=\"p-4\">\n                <div class=\"goods-name text-lg font-medium text-gray-700 mb-2\">{{ item.name }}</div>\n                <div class=\"price-details flex justify-between items-center\">\n                  <strong class=\"price text-red-600 text-2xl\">￥{{ item.price }}</strong>\n                  <div class=\"flex space-x-4 text-gray-600\">\n                    <span class=\"view-count\"><i class=\"fa-regular fa-eye mr-1\"></i>{{ item.readCount }}人浏览</span>\n                    <span class=\"like-count\"><i class=\"fa-regular fa-thumbs-up mr-1\"></i>{{ item.likesCount }}人点赞</span>\n                  </div>\n                </div>\n              </div>\n            </div>\n          </el-col>\n        </el-row>\n\n        <!-- Pagination -->\n        <el-pagination\n          background\n          @current-change=\"handleCurrentChange\"\n          :current-page=\"pageNum\"\n          :page-sizes=\"[5, 10, 20]\"\n          :page-size=\"pageSize\"\n          layout=\"total, prev, pager, next\"\n          :total=\"total\"\n          class=\"flex justify-center mt-6\">\n        </el-pagination>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  data() {\n    return {\n      categoryList: [],\n      goodsList: [],\n      pageNum: 1,\n      pageSize: 12,\n      total: 0,\n      category: '全部',\n      sort: '最新',\n      name: ''\n    };\n  },\n  mounted() {\n    this.loadCategory();\n    this.loadGoods(1);\n  },\n  methods: {\n    loadCategory() {\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n      });\n    },\n    loadGoods(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/goods/selectFrontPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          category: this.category === '全部' ? null : this.category,\n          sort: this.sort\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.goodsList = res.data?.list;\n          this.total = res.data?.total;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.loadGoods(pageNum);\n    }\n  }\n};\n</script>\n\n<style scoped>\n/* 引入 Font Awesome 图标库 */\n@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css');\n\n/* 优化整体样式 */\n.min-h-screen {\n  min-height: 100vh;\n  background-color: #f4f7fa;\n}\n\n/* 背景部分样式 */\n.bg {\n  position: relative;\n  height: 24rem;\n  background-size: cover;\n  background-position: center;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n}\n\n/* 搜索框样式 */\n.search-box {\n  width: 75%;\n  max-width: 50%;\n  text-align: center;\n  color: white;\n}\n\n.title {\n  font-size: 2.25rem;\n  font-weight: bold;\n  margin-bottom: 1.5rem;\n}\n\n.search-input {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  gap: 0.75rem;\n}\n\n/* 操作按钮样式 */\n.action-btn {\n  border-radius: 0.375rem;\n  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);\n  transition: background-color 0.3s ease;\n}\n\n.action-btn:hover {\n  background-color: #e0f2fe;\n}\n\n/* 主内容区域样式 */\n.content-box {\n  width: 91.666667%;\n  max-width: 75%;\n  background-color: white;\n  margin: 1.5rem auto;\n  padding: 1.5rem;\n  border-radius: 0.5rem;\n  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);\n  position: relative;\n}\n\n/* 筛选器样式 */\n.filters {\n  display: flex;\n  flex-wrap: wrap;\n  gap: 1rem;\n  margin-bottom: 1.5rem;\n}\n\n.filters el-select {\n  width: 100%;\n  max-width: 50%;\n  border-radius: 0.375rem;\n  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);\n}\n\n/* 商品项样式 */\n.goods-item {\n  cursor: pointer;\n  border-radius: 0.5rem;\n  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);\n  overflow: hidden;\n  transition: box-shadow 0.3s ease;\n}\n\n.goods-item:hover {\n  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);\n}\n\n.goods-image {\n  width: 100%;\n  height: 16rem;\n  object-fit: cover;\n}\n\n.goods-name {\n  font-size: 1.125rem;\n  font-weight: 500;\n  color: #4b5563;\n  margin-bottom: 0.5rem;\n}\n\n.price-details {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.price {\n  color: #dc2626;\n  font-size: 1.5rem;\n}\n\n.view-count,\n.like-count {\n  color: #6b7280;\n}\n\n/* 分页样式 */\n.el-pagination {\n  display: flex;\n  justify-content: center;\n  margin-top: 1.5rem;\n}\n</style>    "],"mappings":"AA2EA;EACAA,KAAA;IACA;MACAC,YAAA;MACAC,SAAA;MACAC,OAAA;MACAC,QAAA;MACAC,KAAA;MACAC,QAAA;MACAC,IAAA;MACAC,IAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,YAAA;IACA,KAAAC,SAAA;EACA;EACAC,OAAA;IACAF,aAAA;MACA,KAAAG,QAAA,CAAAC,GAAA,wBAAAC,IAAA,CAAAC,GAAA;QACA,KAAAf,YAAA,GAAAe,GAAA,CAAAhB,IAAA;MACA;IACA;IACAW,UAAAR,OAAA;MACA,IAAAA,OAAA,OAAAA,OAAA,GAAAA,OAAA;MACA,KAAAU,QAAA,CAAAC,GAAA;QACAG,MAAA;UACAd,OAAA,OAAAA,OAAA;UACAC,QAAA,OAAAA,QAAA;UACAE,QAAA,OAAAA,QAAA,wBAAAA,QAAA;UACAC,IAAA,OAAAA;QACA;MACA,GAAAQ,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAE,IAAA;UACA,KAAAhB,SAAA,GAAAc,GAAA,CAAAhB,IAAA,EAAAmB,IAAA;UACA,KAAAd,KAAA,GAAAW,GAAA,CAAAhB,IAAA,EAAAK,KAAA;QACA;UACA,KAAAe,QAAA,CAAAC,KAAA,CAAAL,GAAA,CAAAM,GAAA;QACA;MACA;IACA;IACAC,oBAAApB,OAAA;MACA,KAAAQ,SAAA,CAAAR,OAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}