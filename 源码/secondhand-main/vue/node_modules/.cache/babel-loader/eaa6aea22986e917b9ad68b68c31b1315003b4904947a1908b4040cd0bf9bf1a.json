{"ast":null,"code":"export default {\n  data() {\n    return {\n      categoryList: [],\n      goodsList: [],\n      pageNum: 1,\n      pageSize: 12,\n      total: 0,\n      category: '全部',\n      sort: '最新',\n      name: ''\n    };\n  },\n  mounted() {\n    this.loadCategory();\n    this.loadGoods(1);\n  },\n  methods: {\n    loadCategory() {\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n      });\n    },\n    loadGoods(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/goods/selectFrontPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          category: this.category === '全部' ? null : this.category,\n          sort: this.sort\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.goodsList = res.data?.list;\n          this.total = res.data?.total;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.loadGoods(pageNum);\n    }\n  }\n};","map":{"version":3,"names":["data","categoryList","goodsList","pageNum","pageSize","total","category","sort","name","mounted","loadCategory","loadGoods","methods","$request","get","then","res","params","code","list","$message","error","msg","handleCurrentChange"],"sources":["src/views/front/Home.vue"],"sourcesContent":["<template>\n  <div style=\"min-height: 100vh\">\n    <!-- Background section -->\n    <div class=\"bg\">\n      <div class=\"search-box\">\n        <div class=\"title\">好看、好用、好玩，都在这里</div>\n        <div class=\"search-input\">\n          <el-input v-model=\"name\" size=\"medium\" prefix-icon=\"el-icon-search\" placeholder=\"请输入商品名称关键字搜索\"></el-input>\n          <el-button @click=\"$router.push({ path: '/front/search', query: { name: name } })\" size=\"medium\" type=\"primary\">\n            <i class=\"el-icon-search\"></i>\n          </el-button>\n        </div>\n      </div>\n    </div>\n\n    <!-- Main content -->\n    <div class=\"content-box\">\n      <!-- Action buttons -->\n      <el-button @click=\"$router.push('/front/addGoods')\" class=\"action-btn\" type=\"primary\" plain>发布商品</el-button>\n      <el-button @click=\"$router.push('/front/userHelp')\" class=\"action-btn\" type=\"primary\" plain>发布求助</el-button>\n\n      <!-- Filters and categories -->\n      <div class=\"filters\">\n        <el-select v-model=\"category\" size=\"medium\" @change=\"loadGoods(1)\">\n          <el-option value=\"全部\"></el-option>\n          <el-option v-for=\"item in categoryList\" :key=\"item.id\" :value=\"item.name\">{{ item.name }}</el-option>\n        </el-select>\n\n        <el-select v-model=\"sort\" size=\"medium\" @change=\"loadGoods(1)\">\n          <el-option value=\"最新\">最新</el-option>\n          <el-option value=\"最热\">最热</el-option>\n        </el-select>\n      </div>\n\n      <!-- Product listings -->\n      <div>\n        <el-row :gutter=\"15\">\n          <el-col :span=\"6\" v-for=\"item in goodsList\" :key=\"item.id\">\n            <div class=\"goods-item\" @click=\"$router.push('/front/goodsDetail?id=' + item.id)\">\n              <img :src=\"item.img\" alt=\"\" class=\"goods-image\">\n              <div class=\"goods-name\">{{ item.name }}</div>\n              <div class=\"price-details\">\n                <strong class=\"price\">￥{{ item.price }}</strong>\n                <span class=\"view-count\">{{ item.readCount }}人浏览</span>\n                <span class=\"like-count\">{{ item.likesCount }}人点赞</span>\n              </div>\n            </div>\n          </el-col>\n        </el-row>\n\n        <!-- Pagination -->\n        <el-pagination\n          background\n          @current-change=\"handleCurrentChange\"\n          :current-page=\"pageNum\"\n          :page-sizes=\"[5, 10, 20]\"\n          :page-size=\"pageSize\"\n          layout=\"total, prev, pager, next\"\n          :total=\"total\">\n        </el-pagination>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  data() {\n    return {\n      categoryList: [],\n      goodsList: [],\n      pageNum: 1,\n      pageSize: 12,\n      total: 0,\n      category: '全部',\n      sort: '最新',\n      name: ''\n    };\n  },\n  mounted() {\n    this.loadCategory();\n    this.loadGoods(1);\n  },\n  methods: {\n    loadCategory() {\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n      });\n    },\n    loadGoods(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/goods/selectFrontPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          category: this.category === '全部' ? null : this.category,\n          sort: this.sort\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.goodsList = res.data?.list;\n          this.total = res.data?.total;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.loadGoods(pageNum);\n    }\n  }\n};\n</script>\n\n<style scoped>\n/* Background Styling */\n.bg {\n  height: 400px;\n  background-image: url(\"@/assets/imgs/home.png\");\n  background-size: cover;\n  background-position: center;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n}\n\n/* Centered search box */\n.search-box {\n  width: 600px;\n  text-align: center;\n  color: #eee;\n}\n\n.title {\n  font-size: 30px;\n  margin-bottom: 20px;\n}\n\n.search-input {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  gap: 10px;\n}\n\n/* Action buttons */\n.action-btn {\n  position: absolute;\n  top: 20px;\n  right: -150px;\n  z-index: 10;\n}\n\n.action-btn:nth-child(2) {\n  top: 70px;\n}\n\n/* Main content box */\n.content-box {\n  width: 70%;\n  background-color: #fff;\n  margin: 10px auto;\n  padding: 20px;\n  border-radius: 5px;\n  position: relative;\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);\n}\n\n/* Filters styling */\n.filters {\n  margin-bottom: 20px;\n}\n\n.filters el-select {\n  width: 200px;\n}\n\n/* Product item styling */\n.goods-item {\n  cursor: pointer;\n  transition: transform 0.2s ease;\n}\n\n.goods-item:hover {\n  transform: scale(1.03);\n}\n\n.goods-image {\n  width: 100%;\n  height: 260px;\n  object-fit: cover;\n  border-radius: 5px;\n  margin-bottom: 10px;\n}\n\n.goods-name {\n  font-size: 16px;\n  color: #555;\n  margin-bottom: 10px;\n  line-height: 1.4;\n}\n\n.price-details {\n  display: flex;\n  align-items: baseline;\n}\n\n.price {\n  color: red;\n  font-size: 24px;\n}\n\n.view-count,\n.like-count {\n  margin-left: 20px;\n  color: #666;\n}\n\n/* Pagination styling */\n.el-pagination {\n  margin-top: 15px;\n}\n</style>\n"],"mappings":"AAkEA;EACAA,KAAA;IACA;MACAC,YAAA;MACAC,SAAA;MACAC,OAAA;MACAC,QAAA;MACAC,KAAA;MACAC,QAAA;MACAC,IAAA;MACAC,IAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,YAAA;IACA,KAAAC,SAAA;EACA;EACAC,OAAA;IACAF,aAAA;MACA,KAAAG,QAAA,CAAAC,GAAA,wBAAAC,IAAA,CAAAC,GAAA;QACA,KAAAf,YAAA,GAAAe,GAAA,CAAAhB,IAAA;MACA;IACA;IACAW,UAAAR,OAAA;MACA,IAAAA,OAAA,OAAAA,OAAA,GAAAA,OAAA;MACA,KAAAU,QAAA,CAAAC,GAAA;QACAG,MAAA;UACAd,OAAA,OAAAA,OAAA;UACAC,QAAA,OAAAA,QAAA;UACAE,QAAA,OAAAA,QAAA,wBAAAA,QAAA;UACAC,IAAA,OAAAA;QACA;MACA,GAAAQ,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAE,IAAA;UACA,KAAAhB,SAAA,GAAAc,GAAA,CAAAhB,IAAA,EAAAmB,IAAA;UACA,KAAAd,KAAA,GAAAW,GAAA,CAAAhB,IAAA,EAAAK,KAAA;QACA;UACA,KAAAe,QAAA,CAAAC,KAAA,CAAAL,GAAA,CAAAM,GAAA;QACA;MACA;IACA;IACAC,oBAAApB,OAAA;MACA,KAAAQ,SAAA,CAAAR,OAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}