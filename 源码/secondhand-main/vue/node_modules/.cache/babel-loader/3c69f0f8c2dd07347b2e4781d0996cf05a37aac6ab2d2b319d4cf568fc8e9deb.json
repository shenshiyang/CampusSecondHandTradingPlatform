ight: 100vh;\n}\n\n.bg {\n  background-color: #409eff;\n  padding: 40px 20px;\n  border-radius: 12px;\n  margin-bottom: 30px;\n  color: white;\n}\n\n.search-card {\n  max-width: 800px;\n  margin: 0 auto;\n  text-align: center;\n}\n\n.slogan {\n  font-size: 24px;\n  font-weight: bold;\n  margin-bottom: 20px;\n}\n\n.search-bar {\n  display: flex;\n  justify-content: center;\n  gap: 10px;\n}\n\n.search-input {\n  width: 400px;\n}\n\n.main-content {\n  max-width: 1000px;\n  margin: 0 auto;\n}\n\n.action-buttons {\n  display: flex;\n  justify-content: flex-end;\n  margin-bottom: 20px;\n  gap: 10px;\n}\n\n.home-card {\n  border-radius: 12px;\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);\n}\n\n.home-placeholder {\n  padding: 40px;\n  font-size: 18px;\n  text-align: center;\n  color: #666;\n}\n</style>\n"],"mappings":"AA+DA;EACAA,IAAA;EACAC,KAAA;IACA;MACAD,IAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}